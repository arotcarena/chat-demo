datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model conversation {
  id                                     Int       @id @default(autoincrement())
  first_user_id                          Int
  second_user_id                         Int
  user_conversation_first_user_idTouser  user      @relation("conversation_first_user_idTouser", fields: [first_user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "conversation_ibfk_1")
  user_conversation_second_user_idTouser user      @relation("conversation_second_user_idTouser", fields: [second_user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "conversation_ibfk_2")
  message                                message[]

  @@index([first_user_id], map: "first_user_id")
  @@index([second_user_id], map: "second_user_id")
}

model message {
  id              Int          @id @default(autoincrement())
  conversation_id Int
  content         String       @db.VarChar(255)
  created_at      DateTime     @db.DateTime(0)
  conversation    conversation @relation(fields: [conversation_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "message_ibfk_1")

  @@index([conversation_id], map: "conversation_id")
}

model user {
  id                                             Int            @id @default(autoincrement())
  username                                       String         @unique @db.VarChar(255)
  password                                       String         @db.VarChar(255)
  conversation_conversation_first_user_idTouser  conversation[] @relation("conversation_first_user_idTouser")
  conversation_conversation_second_user_idTouser conversation[] @relation("conversation_second_user_idTouser")
}
